# ------------------------------------------------------------
# Outlook Manager environment example
# Copy to `.env` (project root) and adjust the values.
# ------------------------------------------------------------

APP_ENV=development

# Microsoft OAuth / IMAP
CLIENT_ID=replace-with-azure-client-id
TOKEN_URL=https://login.microsoftonline.com/consumers/oauth2/v2.0/token
IMAP_SERVER=outlook.live.com
IMAP_PORT=993
INBOX_FOLDER_NAME=INBOX
JUNK_FOLDER_NAME=Junk

# Security
JWT_SECRET_KEY=generate-64-char-secret
DATA_ENCRYPTION_KEY=generate-32-char-secret

# Admin credentials (required in production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_TOKEN=admin123
ENABLE_LEGACY_ADMIN_TOKEN=false

# API / UI
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5001
DEFAULT_EMAIL_LIMIT=5
MAX_EMAIL_LIMIT=50

# Misc
DATABASE_PATH=data/outlook_manager.db
STATIC_DIR=data/static
LOGS_DIR=data/logs
LOG_LEVEL=INFO
