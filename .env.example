# ------------------------------------------------------------
# Outlook Manager environment example
# Copy to `.env` (project root) and adjust the values.
# ------------------------------------------------------------

APP_ENV=development

# Microsoft OAuth / IMAP
CLIENT_ID=replace-with-azure-client-id
TOKEN_URL=https://login.microsoftonline.com/consumers/oauth2/v2.0/token
IMAP_SERVER=outlook.live.com
IMAP_PORT=993
INBOX_FOLDER_NAME=INBOX
JUNK_FOLDER_NAME=Junk

# Security
JWT_SECRET_KEY=generate-64-char-secret
DATA_ENCRYPTION_KEY=generate-32-char-secret

# Admin credentials (required in production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-strong-password

# API / UI
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5001
DEFAULT_EMAIL_LIMIT=1
MAX_EMAIL_LIMIT=50

# JWT Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# Refresh Token Cookie Settings
ADMIN_REFRESH_COOKIE=true
ADMIN_REFRESH_COOKIE_NAME=outlooker_rtk
ADMIN_REFRESH_COOKIE_SECURE=false
ADMIN_REFRESH_COOKIE_PATH=/

# Public API Token (required in production)
PUBLIC_API_TOKEN=your-secure-public-api-token

# Email Cache
EMAIL_CACHE_TTL_SECONDS=15

# Rate Limiting (login protection)
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_SECONDS=900
LOGIN_ATTEMPT_WINDOW_SECONDS=300

# IMAP Settings
IMAP_BUFFER_TIME_SECONDS=300
IMAP_TOKEN_EXPIRE_SECONDS=3600
EMAIL_CACHE_LIMIT_PER_ACCOUNT=100

# Misc
DATABASE_PATH=data/outlook_manager.db
STATIC_DIR=data/static
LOGS_DIR=data/logs
LOG_LEVEL=INFO

# Sentry Error Tracking (optional)
# Get your DSN from https://sentry.io
SENTRY_DSN=
VITE_SENTRY_DSN=
